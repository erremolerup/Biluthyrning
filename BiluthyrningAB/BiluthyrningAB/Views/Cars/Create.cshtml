@model BiluthyrningAB.Models.ViewModels.CarVm

@{
    ViewData["Title"] = "Skapa ny bokning";
}

@section Hero{

    <div class="hero">
    </div>

    <div class="container" style="margin-top: -1900px;">
        <div class="row">
            <div class="col-sm-10">
                <div class="text-block">
                    <h2>Lägg till ny bil</h2>

                    <div class="row">
                        <div class="col-md-4">
                            <form asp-action="Create" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <div class="form-group">
                                    <label asp-for="Car.NumberPlate" class="control-label">Registreringsnummer</label>
                                    <input asp-for="Car.NumberPlate" class="form-control" />
                                    <span asp-validation-for="Car.NumberPlate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Biltyp</label>
                                    <select asp-for="Car.CarType" asp-items="Model.CarTypes" class="form-control">
                                        <option disabled selected>Välj biltyp</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Car.NumberOfDrivenKm" class="control-label">Antal körda km</label>
                                    <input asp-for="Car.NumberOfDrivenKm" class="form-control" />
                                    <span asp-validation-for="Car.NumberOfDrivenKm" class="text-danger"></span>
                                </div>
                                <br />

                                <div class="form-group">
                                    <input type="submit" value="Spara bil" class="btn btn-default" />
                                </div>
                            </form>
                        </div>
                    </div>

                    <div>
                        <a asp-action="Index">Gå tillbaka</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



