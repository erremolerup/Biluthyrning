@model BiluthyrningAB.Models.ViewModels.CarVm

@{
    ViewData["Title"] = "Ändra";
}

@section Hero{

    <div class="hero">
    </div>

    <div class="container" style="margin-top: -1900px;">
        <div class="row">
            <div class="col-sm-10">
                <div class="text-block">
                    <div class="text-block-text">
                        <h2>Ändra bilinformation</h2>

                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Edit">
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    <input type="hidden" asp-for="Car.CarId" />
                                    <div class="form-group">
                                        <label asp-for="Car.NumberPlate" class="control-label"></label>
                                        <input asp-for="Car.NumberPlate" class="form-control" />
                                        <span asp-validation-for="Car.NumberPlate" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Car.CarType" class="control-label"></label>
                                        <input asp-for="Car.CarType" class="form-control" />
                                        <span asp-validation-for="Car.CarType" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="Car.NumberOfDrivenKm" class="control-label"></label>
                                        <input asp-for="Car.NumberOfDrivenKm" class="form-control" />
                                        <span asp-validation-for="Car.NumberOfDrivenKm" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Spara ändringar" class="btn btn-primary" />
                                    </div>
                                </form>
                            </div>
                        </div>

                        <div>
                            <a asp-action="Index">Gå tillbaka</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
