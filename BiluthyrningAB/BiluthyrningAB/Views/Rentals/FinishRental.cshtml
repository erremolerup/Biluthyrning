@model BiluthyrningAB.Models.Rental

@{
    ViewData["Title"] = "Avsluta bokning";
}

@section Hero{

    <div class="hero">
    </div>

    <div class="container" style="margin-top: -1900px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-block">
                    <h2>Slutför bokning</h2>

                    <form asp-action="FinishRental">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <input type="hidden" asp-for="RentalId" />
                        <input type="hidden" asp-for="CarId" />
                        @*<input type="hidden" asp-for="Car.CarType" />
            <input type="hidden" asp-for="Car.NumberPlate" />*@
                        <input type="hidden" asp-for="CustomerId" />

                        @Html.DisplayNameFor(model => model.Car.NumberOfDrivenKm)
                        @Html.DisplayFor(model => model.Car.NumberOfDrivenKm)
                        <br />

                        <div class="form-group">
                            <label asp-for="NewNumberKmDriven" class="control-label"></label>
                            <input asp-for="NewNumberKmDriven" type="number" class="form-control" />
                            <span asp-validation-for="NewNumberKmDriven" class="text-danger">

                            </span>
                        </div>

                        <input type="hidden" asp-for="StartDate" />

                        <div class="form-group">
                            <label asp-for="EndDate" class="control-label"></label>
                            <input asp-for="EndDate" class="form-control" />
                            <span asp-validation-for="EndDate" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Slutför" class="btn btn-primary" />
                        </div>
                    </form>


                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}