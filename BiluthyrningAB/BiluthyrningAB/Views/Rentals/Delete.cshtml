@model BiluthyrningAB.Models.Rental

@{
    ViewData["Title"] = "Ändra";
}

@section Hero{

    <div class="hero">
    </div>

    <div class="container" style="margin-top: -1900px;">
        <div class="row">
            <div class="col-sm-12">
                <div class="text-block">
                    <div class="text-block-text">
                        <h2>Ta bort bokning</h2>
                        <hr />
                        <div class="row">
                            <div class="col-md-4">
                                <form asp-action="Delete"></form>
                            </div>
                        </div>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.NumberOfKm)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.NumberOfKm)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.StartDate)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.StartDate)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.EndDate)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.EndDate)
                            </dd>
                        </dl>
                        <div>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="RentalId" />
                                <input type="submit" value="Ta bort" class="btn btn-primary" /> |
                                <a asp-action="Index">Gå tillbaka</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
