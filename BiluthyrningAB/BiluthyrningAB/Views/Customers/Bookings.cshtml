@model BiluthyrningAB.Models.Customer

@{
    ViewData["Title"] = "Uthyrningar";
}

@section Hero{

    <div class="hero">
    </div>

    @{ int count = 1;}

    <div class="container" style="margin-top: -1900px;">
        <div class="row">
            <div class="col-sm-10">
                <div class="text-block">
                    <div class="text-block-text">
                        <h2>Alla kundens uthyrningar</h2>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Rentals)
                                    </th>
                                    <th>
                                        @Html.Display("Registreringsnummer")
                                    </th>
                                    <th>
                                        @Html.Display("Biltyp")
                                    </th>
                                    <th>
                                        @Html.Display("Uthyrningsdatum")
                                    </th>
                                    <th>
                                        @Html.Display("Återlämningsdatum")
                                    </th>
                                    <th>
                                        @Html.Display("Pris")
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Rentals)
                                {
                                    <tr>
                                        <td>
                                            @count
                                            @{ count++;}
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Car.NumberPlate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Car.CarType)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.StartDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.EndDate)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Price)
                                        </td>

                                        <td>
                                            @if (item.Ongoing == false)
                                            {
                                                @item.EndDate.ToShortDateString()
                                            }
                                            else
                                            {
                                                <p>Ej återlämnad</p>
                                            }
                                        </td>
                                        <td>
                                            @if (item.Ongoing == true)
                                            {
                                                <a asp-action="FinishRental" asp-route-id="@item.RentalId" class="btn btn-success">Slutför</a>
                                            }

                                            else
                                            {
                                                @Html.DisplayFor(modelItem => item.Price)
                                            }
                                        </td>
                                        <td>
                                            <a asp-action="Edit" asp-route-id="@item.RentalId" class="btn btn-outline-info">Ändra</a>
                                            <a asp-action="Details" asp-route-id="@item.RentalId" class="btn btn-outline-info">Detaljer</a>
                                            <a asp-action="Delete" asp-route-id="@item.RentalId" class="btn btn-outline-info">Ta bort</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
